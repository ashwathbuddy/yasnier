{
  "extends": "../../tsconfig.json",
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "lib": ["ES2022", "dom" /* definitions - window, document, etc. */],
    "useDefineForClassFields": false
